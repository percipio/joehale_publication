<div class="member-menu js-member-menu">
  {{!-- Member Links --}}
  {{#if @member}}
    <div class="member-user">
      <div class="member-info flex flex-col">
        <div class="member-name">{{@member.name}}</div>
        <span class="member-email">{{@member.email}}</span>
      </div>
    </div>

    {{!-- Account link --}}
    <a href="/account/"{{#if @custom.use_portal_links}} data-portal="account"{{/if}} class="account-link">
      {{>icon name="user" size="sm"}}{{t "Account"}}
    </a>

    {{!-- Sign out link --}}
    <a href="javascript:" data-members-signout class="signout-link">
      {{>icon name="logout" size="sm"}}{{t "Sign out"}}
    </a>
  {{else}}
    {{#if @site.members_enabled}}
      {{!-- Sign up link --}}
      <a href="/signup/"{{#if @custom.use_portal_links}} data-portal="signup"{{/if}} class="signup-link">
        {{>icon name="arrow-up-right" size="sm"}}{{t "Sign up"}}
      </a>

      {{!-- Sign in link --}}
      <a href="/signin/"{{#if @custom.use_portal_links}} data-portal="signin"{{/if}} class="signin-link">
        {{>icon name="login" size="sm"}}{{t "Sign in"}}
      </a>
    {{/if}}
  {{/if}}
</div>