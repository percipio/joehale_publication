<div class="author-card author-{{slug}}{{#if class}} {{class}}{{/if}}{{#if profile_image}} has-image{{/if}}">

  {{!-- Author profile image --}}
  {{#if profile_image}}
    {{#link href=url class="author-card__media flex flex-cc"}}
      <img class="lazyload author-card__img z-index-1" 
        data-srcset="{{img_url profile_image size="xs"}} 100w,
            {{img_url profile_image size="s"}} 300w"
        srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
        data-sizes="auto"
        data-src="{{img_url profile_image size="xs"}}"
        src="{{img_url profile_image size="xxs"}}"
        alt="{{name}}"
      />
    {{/link}}
  {{/if}}

  {{!-- Author hero content --}}
  <div class="author-card__content flex-1 flex flex-col text-acc">
    {{!-- Name & social --}}
    <div class="author-card__profile flex flex-wrap items-center m-b-sm">
      <h3 class="author-card__name fw-700 m-b-0">
        {{#link href=url}}{{name}}{{/link}}
      </h3>
      
      {{!-- Author social links --}}
      <div class="author-card__social flex flex-1{{#if twitter}} has-twitter{{/if}}{{#if facebook}} has-facebook{{/if}}{{#if website}} has-website{{/if}}">
        {{!-- Twitter --}}
        {{#if twitter}}
          <a href="{{twitter_url}}" class=""
            title="Twitter" aria-label="Twitter"
            target="_blank" rel="noopener noreferrer">
            {{> icon name="twitter" size="sm"}}
          </a>
        {{/if}}
        {{!-- Facebook --}}
        {{#if facebook}}
          <a href="{{facebook_url}}" class=""
            title="Facebook" aria-label="Facebook"
            target="_blank" rel="noopener noreferrer">
            {{> icon name="facebook" size="sm"}}
          </a>
        {{/if}}
        {{!-- Author website --}}
        {{#if website}}
          <a href="{{website}}" class=""
            title="Website" aria-label="Website"
            target="_blank" rel="noopener noreferrer">
            {{> icon name="link" size="sm"}}
          </a>
        {{/if}}
      </div>
    </div>
    
    {{#if bio}}<div class="author-card__bio flex-1 text-09 text-acc opacity-075 m-b">{{bio}}</div>{{/if}}
    
    {{!-- Post count --}}
    {{#if count.posts}}
      {{#link href=url class="author-card__count fw-500 text-09"}}
        {{plural count.posts empty=(t 'No posts') singular=(t '1 post') plural=(t '% posts')}}
      {{/link}}
    {{else}}
      {{#link href=url class="author-card__count fw-500 text-09"}}{{t "View all"}}{{/link}}
    {{/if}}
  </div>
</div>
