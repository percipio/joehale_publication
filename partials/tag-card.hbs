<div class="tag-card"{{#if accent_color}} style="--color-accent: {{accent_color}}"{{/if}}>
  {{!-- Tag image --}}
  {{#if feature_image}}
    <a href="{{url}}" class="tag-card__media">
      <img class="lazyload tag-card__img"
        data-srcset="{{img_url feature_image size="xs"}} 100w,
                {{img_url feature_image size="s"}} 300w"
        srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
        data-sizes="auto"
        data-src="{{img_url feature_image size="xs"}}"
        src="{{img_url feature_image size="xxs"}}"
        alt="{{name}}"
      />
    </a>
  {{/if}}

  {{!-- Tag content --}}
  <div class="tag-card__content">
    {{!-- Tag name --}}
    <h3 class="tag-card__name"><a href="{{url}}">{{name}}</a></h3>
    {{!-- Description & count --}}
    {{#if description}}<p class="tag-card__description">{{description}}</p>{{/if}}
    
    {{#link href=url class="tag-card__count items-center text-09"}}
      {{#plural count.posts empty=(t 'No posts') singular=(t '1 post') plural=(t '% posts')}}{{/plural}}
    {{/link}}
  </div>
</div>
