{{!< default}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
  <div class="container wrapper">

    {{!-- Hero --}}
    {{> post-hero 
      image_style="hidden"
    }}

    <div class="row">
      <div class="col-xs-12 col-lg-8">
        {{!-- Post feature image --}}
        {{#if feature_image}}
          <figure class="post-hero__figure m-b-lg">
            <img
              class="lazyload post-hero__img"
              data-srcset="{{img_url feature_image size="s"}} 300w,
                      {{img_url feature_image size="m"}} 600w,
                      {{img_url feature_image size="l"}} 1000w,
                      {{img_url feature_image size="xl"}} 2000w"
              srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
              data-sizes="auto"
              data-src="{{img_url feature_image size="s"}}"
              src="{{img_url feature_image size="xs"}}"
              alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"/>
            {{#if feature_image_caption}}
              <figcaption>{{feature_image_caption}}</figcaption>
            {{/if}}
          </figure>
        {{/if}}
  
        {{!-- Post content --}}
        <article class="{{post_class}} content post-access-{{visibility}} no-overflow">
          {{content}}
        </article>


        {{#is "post"}}
          {{#if access}}
            {{!-- Post share --}}
            {{> social-share}}
          
            {{!-- Post author(s) section --}}
            {{> post-author}}
            
            {{!-- Include Comments --}}
            {{> comments}}
          {{/if}}
        {{/is}}
      </div>

      <div class="col-xs-12 col-lg-4 sidebar__wrapper">
        {{> sidebar}}
      </div>
    </div>
    
    {{!-- Elements for posts (not pages) --}}
    {{#is "post"}}
      {{!-- Related posts --}}
      {{> related-posts}}
    {{/is}}
  </div>

  {{!-- Table of contents --}}
  {{#has tag="#toc"}}
    {{#if access}}
      {{> toc}}
    {{/if}}
  {{/has}}

{{/post}}
